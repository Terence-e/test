<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Back-end form: add Country after partner -->
  <record id="view_event_registration_form_inherit_country_text" model="ir.ui.view">
    <field name="name">event.registration.form.inherit.country_text</field>
    <field name="model">event.registration</field>
    <field name="inherit_id" ref="event.view_event_registration_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet//group//field[@name='partner_id']" position="after">
        <field name="country_text"/>
      </xpath>
    </field>
  </record>

  <!-- Back-end tree: add Country column after partner -->
  <record id="view_event_registration_tree_inherit_country_text" model="ir.ui.view">
    <field name="name">event.registration.tree.inherit.country_text</field>
    <field name="model">event.registration</field>
    <field name="inherit_id" ref="event.view_event_registration_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//tree/field[@name='partner_id']" position="after">
        <field name="country_text"/>
      </xpath>
    </field>
  </record>
</odoo>