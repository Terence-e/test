<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--
      Add a per-attendee Country text input to the website registration form.
      The name/id must match: attendee_<ticket.id>_<attendee_index>_country_text
    -->
    <template id="registration_attendee_details_inherit_country"
              inherit_id="website_event.registration_attendee_details">
      <xpath expr="//input[@class='d-none' and contains(@name, '-event_ticket_id')]" position="before">
        <t t-set="__country_name">
          attendee_<t t-esc="ticket['id']"/>_<t t-esc="att_counter"/>_country_text
        </t>
        <div class="mt-2">
          <label class="form-label">Country</label>
          <input type="text"
                 class="form-control"
                 t-att-name="__country_name"
                 t-att-id="__country_name"
                 placeholder="Country"/>
        </div>
      </xpath>
    </template>
  </odoo>
